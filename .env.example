# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key — только для серверных API (save-media). Не экспонировать на клиент!
SUPABASE_SERVICE_ROLE_KEY=

# Telegram Bot Token (optional for development)
VITE_TELEGRAM_BOT_TOKEN=

# Для уведомлений о приглашениях в проект (API, server-side)
TELEGRAM_BOT_TOKEN=
# URL приложения для ссылок в приглашениях (опционально, на Vercel подставляется VERCEL_URL)
APP_URL=

# Resend API key — для отправки email-приглашений в проект
# Получить ключ: https://resend.com/api-keys
RESEND_API_KEY=
# Адрес отправителя (домен должен быть верифицирован в Resend)
EMAIL_FROM=noreply@yourdomain.com

# API Endpoint for AI features (optional)
VITE_API_URL=http://localhost:3001

# OpenAI API Key (for AI Summarizer)
VITE_OPENAI_API_KEY=

# OpenRouter API Key — перевод, сценарии, транскрибация каруселей (модели Gemini через OpenRouter)
# Получить ключ: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# WebRTC Signaling Server (optional, for Yjs WebRTC provider)
VITE_WEBRTC_SIGNALING_URL=
